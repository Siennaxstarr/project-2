<li class="flex justify-between gap-x-6 py-5">
    <div class="flex min-w-0 gap-x-4">
        <img class="h-12 w-12 flex-none rounded-full bg-gray-50"
            src="{{employer_logo}}"
            alt="Image of employer logo">
        <div class="min-w-0 flex-auto">
            <p class="text-sm font-semibold leading-6 text-gray-900">{{job_title}}</p>
            <p class="mt-1 truncate text-xs leading-5 text-gray-500 word-wrap">{{job_description}}</p>
        </div>
    </div>
    <div class="shrink-0 sm:flex sm:flex-col sm:items-end">
        <p class="text-sm leading-6 text-gray-900">{{employer_name}}</p>
        <p class="mt-1 text-xs leading-5 text-gray-500">{{job_city}}, {{job_state}}</p>
    </div>
</li>